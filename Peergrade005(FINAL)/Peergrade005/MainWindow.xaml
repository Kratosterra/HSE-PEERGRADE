<Window x:Name="MainWindowKernel" x:Class="Peergrade005.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Fractals"
        Height="540"
        Width="960"
        Background="White"
        Icon="/Images/Fractal.png"
        Foreground="Black" 
        WindowStyle="ThreeDBorderWindow">

    <Window.Resources>

        <Style x:Key="SliderRepeatButton" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border  
                            BorderThickness="1" 
                            BorderBrush="Black"
                            Background="Black"
                            Height="3"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderRepeatButton1" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border 
                            SnapsToDevicePixels="True"
                            Background="#FF621778" 
                            BorderThickness="1" 
                            BorderBrush="#FF621778" 
                            Height="3"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderThumb" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse 
                            Height="10"
                            Width="10" 
                            Fill="#FF621778"></Ellipse>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="Slider"  TargetType="Slider">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"
                                   MinHeight="{TemplateBinding MinHeight}" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Track Grid.Row="1" x:Name="PART_Track"   >
                    <Track.DecreaseRepeatButton>
                        <RepeatButton 
                            Style="{StaticResource SliderRepeatButton1}"
                            Command="Slider.DecreaseLarge" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb 
                            Style="{StaticResource SliderThumb}"  />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton 
                            Style="{StaticResource SliderRepeatButton}"
                            Command="Slider.IncreaseLarge" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style x:Key="HorizontalSlider" TargetType="Slider">
            <Setter 
                Property="Focusable"
                Value="False"/>
            <Setter 
                Property="SnapsToDevicePixels"
                Value="true" />
            <Setter 
                Property="OverridesDefaultStyle"
                Value="true" />
            <Style.Triggers>
                <Trigger 
                    Property="Orientation" 
                    Value="Horizontal">
                    <Setter Property="MinHeight" Value="21" />
                    <Setter Property="MinWidth" Value="104" />
                    <Setter Property="Template" Value="{StaticResource Slider}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle 
                            Margin="2"
                            StrokeDashArray="1 2"
                            SnapsToDevicePixels="true"
                            StrokeThickness="1" 
                            Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>

        <Style x:Key="ButtonStyleMain" 
               TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" 
                    Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" 
                    Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" 
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="HorizontalContentAlignment" 
                    Value="Center"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Padding" 
                    Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter x:Name="contentPresenter"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" 
                                     Value="true">
                                <Setter 
                                    Property="BorderBrush"
                                    TargetName="border"
                                    Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter 
                                    Property="Background"
                                    TargetName="border"
                                    Value="{StaticResource Button.MouseOver.Background}"/>
                                <Setter 
                                    Property="BorderBrush" 
                                    TargetName="border"
                                    Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="true">
                                <Setter 
                                    Property="Background"
                                    TargetName="border" 
                                    Value="{StaticResource Button.Pressed.Background}"/>
                                <Setter 
                                    Property="BorderBrush"
                                    TargetName="border"
                                    Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="false">
                                <Setter 
                                    Property="Background" 
                                    TargetName="border"
                                    Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter 
                                    Property="BorderBrush"
                                    TargetName="border"
                                    Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter 
                                    Property="TextElement.Foreground" 
                                    TargetName="contentPresenter" 
                                    Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid ShowGridLines="False">

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="TypeFractalTextBlock"
                   Grid.Column="0"
                   Grid.Row="0" 
                   Background="White"
                   Text="Тип фрактала: Фрактальное Дерево"
                   Grid.ColumnSpan="5" 
                   FontWeight="Bold"
                   TextDecorations="{x:Null}"
                   FontStyle="Normal"
                   FontStretch="Normal"
                   TextWrapping="NoWrap"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center" 
                   Foreground="Black" />
        <TextBlock x:Name="ZoomTextBlock"
                   Grid.Column="5"
                   Grid.Row="0" 
                   Background="White"
                   Text="Масштаб: x1"
                   Grid.ColumnSpan="3"
                   FontWeight="Bold"
                   TextDecorations="{x:Null}"
                   FontStyle="Normal"
                   FontStretch="Normal" 
                   TextWrapping="NoWrap"
                   HorizontalAlignment="Stretch" 
                   TextAlignment="Center" 
                   Foreground="Black" />
        <TextBlock x:Name="ImageTextBlock"
                   Grid.Column="8"
                   Grid.Row="0"
                   Background="White"
                   Text="Изображение"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   TextDecorations="{x:Null}"
                   FontStyle="Normal"
                   FontStretch="Normal"
                   TextWrapping="NoWrap"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   Foreground="Black" />

        <Image  x:Name ="ImageInfo"
                Grid.Column="0" 
                Grid.Row="2"
                Grid.ColumnSpan="5"
                Grid.RowSpan ="14"
                Source="/Images/FRACTAL-TREE.png" />
        <ScrollViewer x:Name="ScrollViewer"
                      Grid.Column="0"
                      Grid.Row="2"
                      Grid.ColumnSpan="5"
                      Grid.RowSpan ="14" 
                      HorizontalScrollBarVisibility="Visible"
                      Padding="0,0,0,0"
                      Margin="3,3,3,3"
                      BorderThickness="1,1,1,1"
                      Visibility="Hidden">
            <Image x:Name ="MainImage" 
                   Stretch="None"
                   Cursor="Arrow"
                   RenderTransformOrigin="0.5,0.5"
                   OpacityMask="Black"
                   ScrollViewer.HorizontalScrollBarVisibility="Visible"
                   Margin="3,3,0,0" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" 
                                        ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </ScrollViewer>

        <Button x:Name="TreeButton"
                Style="{DynamicResource ButtonStyleMain}"
                Content="Дерево"
                Grid.Row="1"
                Grid.Column ="0"
                BorderThickness="1,1,1,1"
                BorderBrush="Black"
                Foreground="White"
                FontWeight="Bold" 
                FontStyle="Normal"
                Background="Black"
                Padding="1,1,1,1"
                Margin="3,3,3,3"
                Click="TreeButton_Click"/>
        <Button x:Name="CurvedKochButton"
                Style="{DynamicResource ButtonStyleMain}"
                Content="Кривая Коха"
                Grid.Column="1"
                Grid.Row="1"
                Background="Black"
                BorderThickness="1,1,1,1"
                BorderBrush="Black" 
                Foreground="White" 
                FontWeight="Bold"
                FontStyle="Normal" 
                Margin="3,3,3,3"
                Click="CurvedKochButton_Click"/>
        <Button x:Name="CarpetButton"
                Style="{DynamicResource ButtonStyleMain}"
                Content="Ковёр" 
                Grid.Column="2"
                Grid.Row="1" 
                Background="#FF151515"
                BorderThickness="1,1,1,1"
                BorderBrush="Black"
                Foreground="White" 
                FontWeight="Bold"
                FontStyle="Normal" 
                Margin="3,3,3,3"
                Click="CarpetButton_Click"/>
        <Button x:Name="TriangleButton"
                Style="{DynamicResource ButtonStyleMain}" 
                Content="Треугольник"
                Grid.Column="3"
                Grid.Row="1"
                Background="Black" 
                BorderThickness="1,1,1,1"
                BorderBrush="Black"
                Foreground="White"
                FontWeight="Bold" 
                FontStyle="Normal" 
                Margin="3,3,3,3"
                Click="TriangleButton_Click"/>
        <Button x:Name="SetButton"
                Style="{DynamicResource ButtonStyleMain}" 
                Content="Множество"
                Grid.Column="4" 
                Grid.Row="1" 
                Background="Black"
                BorderThickness="1,1,1,1"
                BorderBrush="Black"
                Foreground="White"
                FontWeight="Bold"
                FontStyle="Normal"
                Margin="3,3,3,3" 
                Click="SetButton_Click"/>
        <Slider x:Name="ZoomSlider"
                Style="{DynamicResource HorizontalSlider}"
                Grid.Column="5" 
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Maximum="5" 
                Value="1"
                FontWeight="Normal"
                BorderBrush="Black"
                BorderThickness="3,3,3,3"
                Margin="3,3,3,3"
                Padding="0,0,0,0"
                ScrollViewer.HorizontalScrollBarVisibility="Visible"
                UseLayoutRounding="True" 
                VerticalContentAlignment="Stretch"
                HorizontalContentAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" 
                Minimum="1" 
                SmallChange="1"
                ValueChanged="ZoomSlider_ValueChanged" 
                TickPlacement="Both" 
                Interval="37"
                TickFrequency="0"
                Orientation="Horizontal"
                RenderTransformOrigin="0.5,0.5"
                Foreground="Black" 
                Background="White" 
                AutoToolTipPlacement="None" >
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Button x:Name="SaveButton"
                Style="{DynamicResource ButtonStyleMain}"
                Content="Сохранить"
                Grid.Column="8"
                Grid.Row="1" 
                Grid.ColumnSpan="2" 
                Background="#FF621778"
                BorderThickness="1,1,1,1"
                FontWeight="Bold"
                Margin="3,3,3,3" 
                Click="SaveButton_Click"
                BorderBrush="Black" 
                Foreground="White"
                FontSize="14"/>

        <GroupBox x:Name="MainSettingsBox"
                  Grid.Column="5" 
                  Header="Основные настройки"
                  Grid.Row="3" 
                  Grid.ColumnSpan ="5"
                  Grid.RowSpan ="3"
                  BorderBrush="Black" 
                  FontWeight="Bold" 
                  Margin="3,3,3,0"
                  Padding="3,3,3,3"/>
        <TextBlock x:Name="SectionLengthText" 
                   Grid.Column="6" 
                   Grid.Row="4" 
                   Grid.ColumnSpan="2" 
                   FontWeight="Normal"
                   FontStyle="Italic"
                   Text="Длина отрезка: 100"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <Image 
            Grid.Column="5"
            Grid.Row="4"
            Source="/Images/lenghtsegment.png"
            Stretch="Uniform" 
            StretchDirection="Both" 
            Margin="0,0,3,4" 
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            UseLayoutRounding="True"/>
        <Slider x:Name="SectionLengthSlider"
                Style="{DynamicResource HorizontalSlider}" 
                Grid.Column="8"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Minimum="1"
                Maximum="350"
                Margin="0,0,6,0"
                SmallChange="1" 
                ValueChanged="SectionLengthSlider_ValueChanged" 
                VerticalAlignment="Center"
                Value="100"/>
        <TextBlock x:Name="RecursionDeepText" 
                   Grid.Column="6"
                   Grid.Row="5"
                   Grid.ColumnSpan="2" 
                   FontWeight="Normal"
                   FontStyle="Italic"
                   Text="Глубина рекурсии: 3"
                   TextAlignment="Center" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,5" />
        <Image 
            Grid.Column="5" 
            Grid.Row="5"
            Source="/Images/recursion.png"
            Stretch="Uniform" 
            StretchDirection="Both"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0,0,2,1" 
            Grid.IsSharedSizeScope="True"
            UseLayoutRounding="True"/>
        <Slider x:Name="RecursionDeepSlider" 
                Style="{DynamicResource HorizontalSlider}"
                Grid.Column="8"
                Grid.Row="5" 
                Grid.ColumnSpan="2" 
                Minimum="1"
                Maximum="12"
                Margin="0,0,6,0"
                SmallChange="1" 
                ValueChanged="RecursionDeepSlider_ValueChanged" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center"
                Padding="0,0,0,0"
                VerticalAlignment="Center"
                Value="3"/>

        <GroupBox x:Name="FractalTreeSettingsBox"
                  Grid.Column="5" 
                  Header="Настройки фрактального дерева"
                  Grid.Row="6"
                  Grid.ColumnSpan ="5"
                  Grid.RowSpan ="4" 
                  BorderBrush="Black" 
                  FontWeight="Bold" 
                  Margin="3,3,3,0" 
                  Padding="3,3,3,3"/>
        <TextBlock x:Name="RelationText"
                   Grid.Column="6"
                   Grid.Row="7"
                   Grid.ColumnSpan="2"
                   FontWeight="Normal"
                   FontStyle="Italic" 
                   Text="Отношение длин: 0,650"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" />
        <Image x:Name="RelationImage"
               Grid.Column="5"
               Grid.Row="7" 
               Source="/Images/relation.png"
               Stretch="Uniform"
               StretchDirection="Both"
               Margin="0,0,4,10"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               ScrollViewer.VerticalScrollBarVisibility="Disabled"
               UseLayoutRounding="True"/>
        <Slider x:Name="RelationSlider"
                Style="{DynamicResource HorizontalSlider}"
                Grid.Column="8"
                Grid.Row="7"
                Grid.ColumnSpan="2"
                Minimum="1"
                Maximum="999"
                Margin="0,0,6,0"
                SmallChange="1"
                ValueChanged="RelationSlider_ValueChanged"
                VerticalAlignment="Center"
                Value="650"/>
        <TextBlock x:Name="FirstAngleText" 
                   Grid.Column="6" 
                   Grid.Row="8"
                   Grid.ColumnSpan="2"
                   FontWeight="Normal"
                   FontStyle="Italic"
                   Text="Первый угол наклона: 45"
                   TextAlignment="Center" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <Image x:Name="FirstAngleImage" 
               Grid.Column="5" 
               Grid.Row="8"
               Source="/Images/angle.png"
               Stretch="Uniform"
               StretchDirection="Both"
               Margin="0,0,4,11"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               ScrollViewer.VerticalScrollBarVisibility="Disabled" 
               UseLayoutRounding="True"/>
        <Slider x:Name="FirstAngleSlider" 
                Style="{DynamicResource HorizontalSlider}"
                Grid.Column="8" 
                Grid.Row="8"
                Grid.ColumnSpan="2" 
                Minimum="-179" 
                Maximum="179"
                Margin="0,0,6,0" 
                SmallChange="1"
                ValueChanged="FirstAngleSlider_ValueChanged"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch" 
                Value="45"/>
        <TextBlock x:Name="SecondAngleText"
                   Grid.Column="6" 
                   Grid.Row="9" 
                   Grid.ColumnSpan="2"
                   FontWeight="Normal"
                   FontStyle="Italic" 
                   Text="Второй угол наклона: 45"
                   TextAlignment="Center" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <Image x:Name="SecondAngleImage"
               Grid.Column="5"
               Grid.Row="9" 
               Source="/Images/angle.png"
               Stretch="Uniform" 
               StretchDirection="Both"
               Margin="0,0,4,10" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top"
               ScrollViewer.VerticalScrollBarVisibility="Disabled"
               UseLayoutRounding="True"/>
        <Slider x:Name="SecondAngleSlider"
                Style="{DynamicResource HorizontalSlider}"
                Grid.Column="8"
                Grid.Row="9"
                Grid.ColumnSpan="2"
                Minimum="-179" 
                Maximum="179" 
                Margin="0,0,6,0" 
                SmallChange="1"
                ValueChanged="SecondAngleSlider_ValueChanged"
                VerticalAlignment="Center" 
                Value="45"/>

        <GroupBox x:Name="SetKantorBox" 
                  Grid.Column="5" 
                  Header="Настройки множества Кантора" 
                  Grid.Row="6"
                  Grid.ColumnSpan ="5" 
                  Grid.RowSpan ="3" 
                  BorderBrush="Black"
                  FontWeight="Bold" 
                  Margin="3,3,3,3"
                  Padding="3,3,3,3"
                  Visibility="Hidden"/>
        <TextBlock x:Name="SideText"
                   Grid.Column="6" 
                   Grid.Row="7" 
                   Grid.ColumnSpan="2"
                   FontWeight="Normal"
                   FontStyle="Italic"
                   Text="Сторона прямоугольника: 20" 
                   TextAlignment="Center" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Hidden"/>
        <Image x:Name="SideImage"
               Grid.Column="5"
               Grid.Row="7" 
               Source="/Images/lengthside.png" 
               Stretch="Uniform"
               StretchDirection="Both"
               Margin="0,0,0,5" 
               HorizontalAlignment="Right"
               VerticalAlignment="Top" 
               ScrollViewer.VerticalScrollBarVisibility="Disabled"
               UseLayoutRounding="True" 
               Visibility="Hidden"/>
        <Slider x:Name="SideSlider"
                Style="{DynamicResource HorizontalSlider}" 
                SmallChange="1"
                Grid.Column="8"
                Grid.Row="7" 
                Grid.ColumnSpan="2"
                Minimum="1" 
                Maximum="40"
                Visibility="Hidden"
                ValueChanged="SideSlider_ValueChanged"
                Margin="0,0,6,0" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Value="20"/>
        <TextBlock x:Name="DistanceText" 
                   Grid.Column="6" 
                   Grid.Row="8" 
                   Grid.ColumnSpan="2"
                   FontWeight="Normal"
                   FontStyle="Italic" 
                   Text="Расстояние: 40"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Visibility="Hidden" />
        <Image x:Name="DistanceImage" 
               Grid.Column="5" 
               Grid.Row="8" 
               Source="/Images/distance.png"
               Stretch="Uniform"
               StretchDirection="Both"
               Margin="0,0,0,5" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top"
               ScrollViewer.VerticalScrollBarVisibility="Disabled"
               UseLayoutRounding="True"
               Visibility="Hidden"/>
        <Slider x:Name="DistanceSlider"
                Style="{DynamicResource HorizontalSlider}" 
                SmallChange="1"
                Grid.Column="8"
                Grid.Row="8" 
                Grid.ColumnSpan="2"
                Minimum="1" 
                Maximum="80" 
                Visibility="Hidden"
                ValueChanged="DistanceSlider_ValueChanged"
                Margin="0,0,6,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center" 
                Value="40"/>

        <GroupBox x:Name="GradientSettingsBox" 
                  Grid.Column="5" 
                  Header="Настройкa цветов градиента"
                  Grid.Row="10"
                  Grid.ColumnSpan ="5"
                  Grid.RowSpan ="3" 
                  BorderBrush="Black" 
                  FontWeight="Bold"
                  Margin="3,3,3,1" 
                  Padding="3,3,3,3"/>
        <TextBlock x:Name="StartColourText" 
                   Grid.Column="6"
                   Grid.Row="11"
                   FontWeight="Normal"
                   FontStyle="Italic"
                   Text="(0,0,0)" 
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" />
        <Slider x:Name="StartColourRSlider" 
                Style="{DynamicResource HorizontalSlider}" 
                Grid.Column="7"
                Grid.Row="11" 
                Minimum="0" 
                Maximum="255" 
                SmallChange="1" 
                ValueChanged="StartColourRSlider_ValueChanged" 
                Margin="0,0,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                MinWidth="0" 
                MinHeight="0"/>
        <Slider x:Name="StartColourGSlider" 
                Style="{DynamicResource HorizontalSlider}"
                Grid.Column="8" 
                Grid.Row="11" 
                Minimum="0" 
                Maximum="255" 
                SmallChange="1"
                ValueChanged="StartColourGSlider_ValueChanged"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                MinWidth="0" 
                MinHeight="0"/>
        <Slider x:Name="StartColourBSlider" 
                Style="{DynamicResource HorizontalSlider}"
                Grid.Column="9"
                Grid.Row="11"
                Minimum="0" 
                Maximum="255" 
                Margin="0,0,10,0" 
                SmallChange="1"
                ValueChanged="StartColourBSlider_ValueChanged"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                MinWidth="0"
                MinHeight="0"/>
        <TextBlock x:Name="EndColourText"
                   Grid.Column="6" 
                   Grid.Row="12" 
                   FontWeight="Normal"
                   FontStyle="Italic" 
                   Text="(0,0,0)" 
